<!DOCTYPE html>
<html>
  <head>
    <meta charset="ISO-8859-1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SimplETS | @ViewBag.Title</title>

    @Scripts.Render("~/bundles/scripts")
    
    @RenderSection("ScriptsImportTop", required: false)
    
    @Styles.Render("~/bundles/styles")

    @RenderSection("StylesImport", required: false)
    
  </head>
  <body id="body">
    
    @Html.Partial("Partials/Authentication/_Login");
    
    <div id="wrapper">
      
      @RenderPage("Partials/_NavBar.cshtml")

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div id="content-header" class="clearfix">
                        <div class="pull-left">
                            <ol class="breadcrumb">
                                <li><a href="#">Home</a></li>
                                <li class="active"><span>@ViewBag.Title</span></li>
                            </ol>
                            <h1>@ViewBag.Title</h1>
                        </div>
                        <div class="pull-right hidden-xs">
                            <div class="pull-left">
                                <div class="abel">
                                    <b><i class="fa fa-trophy"></i> 3500 </b> vierges sacrifiées
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>

    </div>

    @RenderSection("ScriptsImportBottom", required: false)

  <script type="text/javascript">
      jQuery(function ($) {
          var $login = $("#login");
          ko.applyBindings(new LoginModelView($login), $login[0]);
      });
  </script>

  </body>
</html>