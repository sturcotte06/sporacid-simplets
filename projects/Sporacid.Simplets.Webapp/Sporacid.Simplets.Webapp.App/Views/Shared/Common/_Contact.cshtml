@using Sporacid.Simplets.Webapp.App.Resources.Buttons
@using Sporacid.Simplets.Webapp.App.Resources.Labels
@using Sporacid.Simplets.Webapp.App.Resources.Messages
@using Sporacid.Simplets.Webapp.App.Resources.Titles

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">@Html.Raw(TitleStrings.Contact_MainTitle)</h3>
  </div>
  <div id="adresse" style="padding: 20px;" data-bind="with: contact">
    <!-- Base profil edition mode. -->
    <div id="edit-profil-base">
      <form role="form">
        <div class="row">
          <div class="form-group col-md-6">
            <label>@Html.Raw(LabelStrings.Contact_Prenom)</label>
            <input data-bind="value: prenom" class="form-control" />
          </div>
          <div class="form-group col-md-6">
            <label>@Html.Raw(LabelStrings.Contact_Nom)</label>
            <input data-bind="value: nom" class="form-control" />
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-4">
            <label>@Html.Raw(LabelStrings.Contact_Telephone)</label>
            <input data-bind="value: telephone" class="form-control" placeholder="@Html.Raw(LabelStrings.Contact_Telephone_Placeholder)" />
          </div>
          <div class="form-group col-md-8">
            <label>@Html.Raw(LabelStrings.Contact_Courriel)</label>
            <input data-bind="value: courriel" class="form-control" placeholder="@Html.Raw(LabelStrings.Contact_Courriel_Placeholder)" />
          </div>
        </div>


        <div class="form-group">
          <label>@Html.Raw(LabelStrings.Contact_Type)</label>
          <select data-bind="options: $root.typesContacts,
  optionsValue: 'id',
  optionsText: 'nom',
  value: typeContactId" class="form-control">

          </select>
        </div>
      </form>
    </div>
  </div>
</div>